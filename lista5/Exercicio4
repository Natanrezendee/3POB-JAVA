//Exercício 4: Contagem de Ocorrências de um Número

import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Integer> numeros = new ArrayList<>();

        System.out.println("Digite 10 números inteiros:");

        for (int i = 0; i < 10; i++) {
            System.out.print("Número " + (i + 1) + ": ");
            int numero = scanner.nextInt();
            numeros.add(numero);
        }

        System.out.print("\nDigite um número para verificar quantas vezes ele aparece: ");
        int numeroProcurado = scanner.nextInt();

        int contagem = 0;
        for (int n : numeros) {
            if (n == numeroProcurado) {
                contagem++;
            }
        }
        
        System.out.println("\nO número " + numeroProcurado + " aparece " + contagem + " vez(es) na lista.");

        scanner.close();
    }
}
