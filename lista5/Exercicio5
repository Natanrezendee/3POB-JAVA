//Exercício 5: Ordenação de Lista de Números

import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Integer> numeros = new ArrayList<>();

        System.out.println("Digite números inteiros (digite -1 para parar):");

        while (true) {
            System.out.print("Número: ");
            int numero = scanner.nextInt();

            if (numero == -1) {
                break; 
            }

            numeros.add(numero);
        }

        if (numeros.isEmpty()) {
            System.out.println("\nNenhum número foi digitado.");
            
        } else {
            for (int i = 0; i < numeros.size() - 1; i++) {
                for (int j = 0; j < numeros.size() - 1 - i; j++) {
                    if (numeros.get(j) > numeros.get(j + 1)) {
                        // Troca de posição
                        int temp = numeros.get(j);
                        numeros.set(j, numeros.get(j + 1));
                        numeros.set(j + 1, temp);
                    }
                }
            }
            
            System.out.println("\nLista ordenada em ordem crescente:");
            for (int n : numeros) {
                System.out.println(n);
            }
        }

        scanner.close();
    }
}
